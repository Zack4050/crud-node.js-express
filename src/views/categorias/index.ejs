<h1>Listado de Categorias</h1>

<a class = "button button--primary" href="/categorias/create">Crear una categoria</a>

<section class="categorias">
<table>
    <thead> 
        <tr>
            <th>Nombre</th>
        </tr>
    </thead>
    <body>
        <% categorias.forEach(categoria => { %>
        <tr>
            <td><a href="/categorias/<%= categoria.id %>"><%= categoria.name %></a></td>
            <td class="cell-inline">
                <a class="button button--primary" href="/categorias/<%= categoria.id %>/edit">Edit</a>
                <form
                class="from-delete"
                action="/categorias/<%= categoria.id %>?_method=DELETE" 
                method = "post">
                
                <button class="button button--danger" type="submit">Borrar</button>
                </form>
            </td>
        </tr>
        <% }) %>
    </body>
</table>
</section>

<!-- confirmacion de eliminacion -->
<script>
    document.addEventListener("submit", (event) => {
        event.preventDefault();

        if (event.target.classList.contains("from-delete")) {
            const confirmar = confirm("¿Estás seguro de que deseas eliminar esta categoría?");
            if (confirmar) {
                event.target.submit();
            }
        }
    });
</script>